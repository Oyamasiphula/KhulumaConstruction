

<form class="form-horizontal" action="/users/add" method="POST">
<fieldset>
<!-- Form Name -->
<legend><STRONG>Registration Form</STRONG></legend>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Name:</label>
  <div class="controls">
    <input id="textinput" name="name" type="text" placeholder="Name" class="input-xlarge"required>
    <h1.5 class="help-block">Full names</h1.5>
  </div>
</div>
<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Surname:</label>
  <div class="controls">
    <input id="textinput" name="surname" type="text" placeholder="Surname" class="input-xlarge"required>
  </div>
</div>
<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Title</label>
  <div class="controls">
    <input id="textinput" name="title" type="text" placeholder="(e.g. Doctor)" class="input-xlarge"required>
  </div>
</div> 
<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Address 1:</label>
  <div class="controls">
    <input id="textinput" name="address1" type="text" placeholder="Address 1" class="input-xlarge"required>

  </div>
</div>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Address 2:</label>
  <div class="controls">
    <input id="textinput" name="address2" type="text" placeholder="Address 2" class="input-xlarge"required>

  </div>
</div>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Town</label>
  <div class="controls">
    <input id="textinput" name="town" type="text" placeholder="(e.g. Cape Town)" class="input-xlarge"required>
  
  </div>
</div>

<!-- Password input-->
<div class="control-group">
  <label class="control-label" for="passwordinput">Mobile Phone:</label>
  <div class="controls">
    <input id="enum" name="mobileNo" type="int" placeholder="(e.g. 021 7533 756)" class="input-xlarge"required>
  </div>
</div>

<!-- Select Basic -->
<div class="control-group">
  <label class="control-label" for="selectbasic">Register as:</label>
  <div class="controls">
    <select id="selectbasic" name="registerAs" class="input-xlarge"required>
      <option>Sub - Constructor</option>
      <option>Constructor/Building Company</option>
    </select>
  </div>
</div>

<!-- Password input-->
<div class="control-group">
  <label class="control-label" for="passwordinput">Password:</label>
  <div class="controls">
    <input id="passwordinput" name="password" type="password" placeholder="Password" class="input-xlarge"required>
    <h1.5 class="help-block">Choose a unique/secret password</h1.5>
  </div>
</div>

<!-- Password input-->
<div class="control-group">
  <label class="control-label" for="passwordinput">Repassword:</label>
  <div class="controls">
    <input id="passwordinput" name="repassword" type="password" placeholder="Password" class="input-xlarge"required>
    <h1.5 class="help-block">Enter the corresponding password </h1.5>
  </div>
</div>

<!-- Button (Double) -->
<div class="control-group">
  <label class="control-label" for="button1id">Select Options:</label>
  <div class="controls">
    <button id="button1id" name="button1id" class="btn btn-success">Register</button>                                                                                   <button id="button2id" name="button2id" class="btn btn-danger">Cancel</button>
   
  </div>
</div>

</fieldset>
</form>