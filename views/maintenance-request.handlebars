    <!-- Text input-->
    <div class="control-group">
      <label class="control-label" for="Client">Client Name</label>
      <div class="controls">
        <input id="Client" name="client_name" type="text" placeholder="Client" class="input-xlarge" required>
      </div>
    </div>

    <!-- Text input-->
    <div class="control-group">
      <label class="control-label" for="textinput">Contacts</label>
