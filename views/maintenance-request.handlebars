        <input id="textinput" name="contact_no" type="enum" placeholder="Cell Number" class="input-xlarge" required>
      </div>
    </div>

    <!-- Text input-->
    <div class="control-group">
      <label class="control-label" for="textinput">Subject</label>
      <div class="controls">
        <input id="textinput" name="subject" type="text" placeholder="Problem" class="input-xlarge" required>
      </div>
    </div>

    <!-- Textarea -->
    <div class="control-group">
      <label class="control-label" for="textarea">Description</label>
      <div class="controls">                     
        <textarea id="textarea" placeholder="description" name="description" class="input-xlarge" requred></textarea>
      </div>
    </div>

