<form class="form-horizontal">
<fieldset>

<!-- Form Name -->
<legend>Registration Form</legend><br><br>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Name:</label>
  <div class="controls">
    <input id="textinput" name="textinput" type="text" placeholder="Name" class="input-xlarge">
    <p class="help-block">Full names</p>
  </div>
</div>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Surname:</label>
  <div class="controls">
    <input id="textinput" name="textinput" type="text" placeholder="Surname" class="input-xlarge">
    <p class="help-block">Required</p>
  </div>
</div>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Tittle</label>
  <div class="controls">
    <input id="textinput" name="textinput" type="text" placeholder="(e.g. Doctor)" class="input-xlarge" required="">
    <p class="help-block">Required</p>
  </div>
</div>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Address 1:</label>
  <div class="controls">
    <input id="textinput" name="textinput" type="text" placeholder="Address 1" class="input-xlarge">
    <p class="help-block">Required</p>
  </div>
</div>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Address 2:</label>
  <div class="controls">
    <input id="textinput" name="textinput" type="text" placeholder="Address 2" class="input-xlarge">
    <p class="help-block">Required</p>
  </div>
</div>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Town/City</label>
  <div class="controls">
    <input id="textinput" name="textinput" type="text" placeholder="(e.g. Cape Town)" class="input-xlarge">
    <p class="help-block">Required</p>
  </div>
</div>

<!-- Password input-->
<div class="control-group">
  <label class="control-label" for="passwordinput">Mobile Phone:</label>
  <div class="controls">
    <input id="passwordinput" name="passwordinput" type="password" placeholder="(e.g. 021 7533 756)" class="input-xlarge">
    <p class="help-block">Required</p>
  </div>
</div>

<!-- Select Basic -->
<div class="control-group">
  <label class="control-label" for="selectbasic">Gender:</label>
  <div class="controls">
    <select id="selectbasic" name="selectbasic" class="input-xlarge">
      <option>Female</option>
      <option>Male</option>
    </select>
  </div>
</div>

<!-- Select Basic -->
<div class="control-group">
  <label class="control-label" for="selectbasic">Register as:</label>
  <div class="controls">
    <select id="selectbasic" name="selectbasic" class="input-xlarge">
      <option>Sub - Constructor</option>
      <option>Constructor/Building Company</option>
    </select>
  </div>
</div>

<!-- Password input-->
<div class="control-group">
  <label class="control-label" for="passwordinput">Password:</label>
  <div class="controls">
    <input id="passwordinput" name="passwordinput" type="password" placeholder="Password" class="input-xlarge">
    <p class="help-block">Choose a unique/secrete password</p>
  </div>
</div>

<!-- Password input-->
<div class="control-group">
  <label class="control-label" for="passwordinput">Re - Password:</label>
  <div class="controls">
    <input id="passwordinput" name="passwordinput" type="password" placeholder="Password" class="input-xlarge">
    <p class="help-block">Enter the corresponding password </p>
  </div>
</div>

<!-- Button (Double) -->
<div class="control-group">
  <label class="control-label" for="button1id">Select Options:</label>
  <div class="controls">
    <button id="button1id" name="button1id" class="btn btn-success">Register</button>
    <button id="button2id" name="button2id" class="btn btn-danger">Cancel</button>
  </div>
</div>

</fieldset>
</form>